extends layouts/main
block content
    .form-container
        form(action=routes.join, method="post")
            input(type="email", name="email", placeholder="Email", required=true;)
            input(type="name", name="name", placeholder="Full Name", required=true;)
            input(type="password", name="password", placeholder="password", required=true;)
            input(type="password2", name="password2", placeholder="Verify password", required=true;)
            input(type="submit", value="Join Now")
        include partials/socialLogin